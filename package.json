{
  "private": true,
  "workspaces": [
    "./palette",
    "./themes/*",
    "./website"
  ],
  "scripts": {
    "lint": "eslint .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "devDependencies": {
    "@will-stone/eslint-config": "^2.3.0",
    "@will-stone/prettier-config": "^4.0.0",
    "eslint": "^7.24.0",
    "husky": "^6.0.0",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1"
  }
}
