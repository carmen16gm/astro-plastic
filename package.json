{
  "private": true,
  "workspaces": [
    "./palette",
    "./themes/*",
    "./website"
  ],
  "scripts": {
    "lint": "ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs .",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "cross-env ESLINT_USE_FLAT_CONFIG=true eslint -c eslint.config.mjs --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "devDependencies": {
    "@will-stone/eslint-config": "^0.3.0",
    "@will-stone/prettier-config": "^6.0.3",
    "cross-env": "^7.0.3",
    "eslint": "^8.49.0",
    "husky": "^8.0.2",
    "lint-staged": "^13.1.0",
    "prettier": "^2.8.1"
  }
}
