{
  "name": "plastic",
  "private": true,
  "workspaces": ["vscode", "theme-builder"],
  "description": "A simple theme.",
  "version": "1.0.0",
  "homepage": "https://will-stone.github.io/plastic/",
  "bugs": {
    "url": "https://github.com/will-stone/plastic/issues"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/will-stone/plastic"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-eslint": "^8.2.3",
    "eslint": "^4.19.1",
    "eslint-config-prettier": "^2.9.0",
    "lite-server": "^2.3.0",
    "prettier": "^1.12.1"
  },
  "scripts": {
    "docs": "lite-server --baseDir='./docs'",
    "build-vscode": "plastic-build --outDir vscode/themes",
    "vspublish": "cd vscode && vsce publish"
  },
  "prettier": {
    "arrowParens": "avoid",
    "bracketSpacing": true,
    "printWidth": 80,
    "proseWrap": "always",
    "semi": true,
    "singleQuote": true,
    "trailingComma": "es5",
    "useTabs": false
  },
  "eslintConfig": {
    "parser": "babel-eslint",
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
        "jsx": true
      }
    },
    "env": {
      "browser": true,
      "node": true
    },
    "extends": ["eslint:recommended", "prettier"],
    "rules": {
      "no-console": 0
    }
  }
}
