{
  "name": "with-typescript",
  "version": "1.0.0",
  "scripts": {
    "dev": "next",
    "build": "next build && next export",
    "lint": "eslint . --ignore-path .gitignore",
    "serve": "npm exec serve out",
    "type-check": "tsc"
  },
  "lint-staged": {
    "*.{css,json,md}": [
      "prettier --write"
    ],
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix"
    ]
  },
  "prettier": "@will-stone/prettier-config",
  "eslintConfig": {
    "extends": [
      "@will-stone/eslint-config/typescript",
      "@will-stone/eslint-config/node",
      "@will-stone/eslint-config/react"
    ],
    "rules": {
      "jsx-a11y/anchor-is-valid": "off"
    }
  },
  "dependencies": {
    "clsx": "^1.1.1",
    "lodash": "^4.17.21",
    "next": "^10.1.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1"
  },
  "devDependencies": {
    "@tailwindcss/jit": "^0.1.16",
    "@types/lodash": "^4.14.168",
    "@types/node": "^14.14.37",
    "@types/react": "^17.0.2",
    "@types/react-dom": "^17.0.1",
    "@will-stone/eslint-config": "^2.1.0",
    "@will-stone/prettier-config": "^4.0.0",
    "autoprefixer": "^10.2.5",
    "eslint": "^7.23.0",
    "husky": "^5.2.0",
    "lint-staged": "^10.5.4",
    "pinst": "^2.1.6",
    "plastic-palette": "^1.0.1",
    "postcss": "^8.2.8",
    "prettier": "^2.2.1",
    "tailwindcss": "^2.0.4",
    "typescript": "^4.0"
  }
}
